<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FogachoExamen2P.MainPage">

    <FlexLayout Direction="Column"
                JustifyContent="Start"
                AlignItems="Stretch"
                Padding="20">
        
        <Label Text="Ingrese la cantidad a convertir:"
               FontAttributes="Bold"/>
        
        <Entry x:Name="FromCurrencyPicker"
               Keyboard="Numeric"
               Placeholder="Cantidad"
               WidthRequest="200"/>
        
        <Label Text="Seleccione la moneda de origen"
                FontAttributes="Bold"/>
        <Picker x:Name="MonedaOrigen"
                WidthRequest="200"/>

        <Label Text="Seleccione la moneda de destino"
                FontAttributes="Bold"/>
        <Picker x:Name="ToCurrencyPicker"
                WidthRequest="200"/>

        <Button Text="AF_Convertir"
                Clicked="OnConvertClicked"
                Background="DarkCyan"
                TextColor="White"
                WidthRequest="200"
                HorizontalOptions="Center"/>

        <Label x:Name="ResultLabel"
               FontSize="18"
               HorizontalOptions="Center"/>


    </FlexLayout>

</ContentPage>
